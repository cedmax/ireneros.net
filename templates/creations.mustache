<!doctype html>
<!--[if lt IE 7 ]><html class="ie ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]><html class="ie ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--><html lang="en"> <!--<![endif]-->
	<head>
		{{>head}}
	</head>
<body>

<script type="text/javascript">
	document.write("<div id='sitePreloader'><div id='preloaderImage'><img src='images/site_preloader.gif' alt='Preloader' /></div></div>");
</script>

<div class="container">
	
	{{>header}}
	
	<div id="overview" data-option-key="filter" class="sixteen columns">
		<h3><a href="#filter" data-filter="*" class="selected">{{{title}}}</a></h3>
		<a href="#filter" data-filter=".rosa">Rosa</a>
		<a href="#filter" data-filter=".marcel">Marcel</a>
		<a href="#filter" data-filter=".regina">La regina della neve</a>
		<hr />
	</div>

	
	<div class="sixteen columns">
		<div id="creations" class="sixteen columns">
			{{#creations}}
				<a href="{{url}}" data-fancybox-group="gallery-{{group}}" title="{{creation}}" class="project fancybox columns five {{group}}">
					<div class="projectThumbnail">
						<div class="projectThumbnailHover">
							<h4>{{creation}}</h4>
							<h5>{{title}}</h5>
						</div>
						
						<img src="{{thumb}}" alt="{{title}}" class="thumbnailImage" />
					</div>
				</a>
			{{/creations}}
		</div>
	</div>
	
	{{>footer}}
</body>
</html>